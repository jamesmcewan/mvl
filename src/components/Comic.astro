---
import Details from './Details.astro'
import type ThumbnailType from '../types/ThumbnailType'

const replaceHttp = (url: string) => url.replace('http', 'https')
const getCover = ({ path, extension }: ThumbnailType) =>
  `${replaceHttp(path)}.${extension}`

const { thumbnail, title, creators, series, prices, pageCount } = Astro.props
---

<div>
  <img
    class="rounded-md"
    src={getCover(thumbnail)}
    width="560"
    height="850"
    alt={title}
  />
  <Details {title} {creators} {series} {prices} {pageCount} />
</div>
