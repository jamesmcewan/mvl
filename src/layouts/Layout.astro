---
import Page from '../components/Page/Page.jsx';
import getData from '../functions/getData.mjs';

const { week } = Astro.props;
const {
  data: { results }
} = await getData(week);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Comic releases for {week} week</title>
  </head>
  <body>
    <Page {week} comics={results} />
    <slot />
  </body>
</html>
